{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Top 15 Colorado cities by population - vertical bar chart",
  "width": "container",
  "height": 420,
  "padding": {"top": 10, "left": 60, "bottom": 80, "right": 20},
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  "config": {
    "bar": {
      "cornerRadius": 2
    }
  },
  "encoding": {
    "x": {
      "field": "name",
      "type": "nominal",
      "axis": {
        "labelAngle": -40,
        "labelLimit": 140,
        "labelOverlap": false,
        "title": "City"
      }
    },
    "y": {
      "field": "pop",
      "type": "quantitative",
      "axis": {
        "title": "Population",
        "titlePadding": 20,
        "titleAngle": 0
      }
    },
    "color": {
      "field": "density",
      "type": "quantitative",
      "scale": {
        "scheme": "viridis"
      },
      "legend": {
        "title": "Density (per mi²)",
        "format": ",.0f",
        "orient": "bottom",
        "direction": "horizontal",
        "titleOrient": "left",
        "labelFontSize": 12,
        "titleFontSize": 13,
        "symbolSize": 100,
        "offset": 10
      }
    },
    "opacity": {
      "condition": {
        "param": "selected_geoids",
        "value": 1
      },
      "value": 0.35
    },
    "tooltip": [
      {
        "field": "name",
        "type": "nominal",
        "title": "City"
      },
      {
        "field": "geoid",
        "type": "nominal",
        "title": "GEOID"
      },
      {
        "field": "pop",
        "type": "quantitative",
        "title": "Population",
        "format": ","
      },
      {
        "field": "density",
        "type": "quantitative",
        "title": "Density (per mi²)",
        "format": ",.0f"
      }
    ]
  },
  "params": [
    {
      "name": "selected_geoids",
      "select": {
        "type": "point",
        "fields": ["geoid"],
        "on": "click"
      }
    }
  ]
}